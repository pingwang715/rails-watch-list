<div class="container mt-3">
  <nav class="navbar">
    <div class="container-fluid">
      <a class="navbar-brand">Movie Database</a>
      <form class="d-flex" role="search">
        <button class="btn btn-outline-primary mx-1" type="submit"><%= link_to "My list", lists_path %></button>
        <button class="btn btn-outline-success" type="submit"><%= link_to "New list", new_list_path %></button>
      </form>
    </div>
  </nav>

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
    <div class="container text-center">
      <h1>Save any kind of movies</h1>
      <p>Classic</p>
    </div>
  </div>

  <div class="row">
    <div classs="col-6">
      <div class="justify-content-center">
      <nav class="navbar">
        <div class="container-fluid">
          <a class="navbar-brand">My lists</a>
          <form class="d-flex" role="create">
            <button class="btn btn-success" type="submit"><%= link_to "Create a list", new_list_path %></button>
          </form>
        </div>
      </nav>
    </div>
    </div>
  </div>

  <div class="row">
    <div class="cards">
      <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://plus.unsplash.com/premium_photo-1723867528308-539f3936c339?q=80&w=1626&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
        <%= link_to list.name, list_path(list), class: "text-decoration-none white"%>
      </div>
      <% end %>
    </div>
  </div>

  <div>

  </div>
</div>
